<p id="notice"><%= notice %></p>

<h1>Listing Legislators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Role</th>
      <th>Party</th>
      <th>State</th>
      <th>Ideology</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legislators.each do |legislator| %>
      <tr>
        <td><%= legislator.name %></td>
        <td><%= legislator.desc %></td>
        <td><%= legislator.role %></td>
        <td><%= legislator.party %></td>
        <td><%= legislator.state %></td>
        <td><%= legislator.ideology %></td>
        <td><%= legislator.image %></td>
        <td><%= link_to 'Show', legislator %></td>
        <td><%= link_to 'Edit', edit_legislator_path(legislator) %></td>
        <td><%= link_to 'Destroy', legislator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

